<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
        $('#pratice_result').DataTable({
            "ajax": {
                "url": '@Url.Action("GetAllPracticeResults", "PraticeResult")',
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
  

                {
                    "data": "subject_name",
                    "name": "subject_name",
                    "orderable": true
                },
                {
                    "data": "exam_name",
                    "name": "exam_name",
                    "orderable": true
                },
                {
                    "data": "user_fullname",
                    "name": "user_fullname",
                    "orderable": true
                },
                  {
                    "data": "user_email",
                     "name": "user_email",
                    "orderable": true
                },
                {
                    "data": "tested_at",
                    "name": "tested_at",
                    "orderable": true
                },
                {
                    "data": "grade",
                    "name": "grade",
                    "orderable": true
                },
            ],
        "paging": true,
        "pageLength": 5,
        "ordering": true,
        "serverSide": "true",
        "order": [[0, "asc"]],
        "searching": false
       });
    });
    </script>
}
