
@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Post Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="dashboard.html"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="posts-list.html">Post Lists</a></li>
        <li class="active">Post Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">

        <div class="col-lg-12">
            <div class="nav-tabs-custom ">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#overview" data-toggle="tab">Overview</a></li>
                    <li><a href="#content" data-toggle="tab">Content</a></li>

                    <!-- /.tab-content -->
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="overview">
                        <div class="form-group">
                            <label>Text</label>
                            <input type="text" class="form-control" placeholder="Enter ..." id="txtName">
                        </div>
                        <div class="form-group">
                            <label>Short description</label>
                            <textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3 ">
                                    <label for="thumbnail">Thumbnail</label>
                                    <input class="custom-input" type="file" id="thumbnail">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Type</label>
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3">
                                    <select class="form-control">
                                        <option>option 1</option>
                                        <option>option 2</option>
                                        <option>option 3</option>
                                        <option>option 4</option>
                                        <option>option 5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3">
                                    <select class="form-control">
                                        <option>option 1</option>
                                        <option>option 2</option>
                                        <option>option 3</option>
                                        <option>option 4</option>
                                        <option>option 5</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="content">
                        <div class="box box-info">
                            <div class="box-header">
                                <h3 class="box-title">
                                    CK Editor
                                    <small>Advanced and full of features</small>
                                </h3>
                                <!-- tools box -->
                                <div class="pull-right box-tools">
                                    <button type="button" class="btn btn-info btn-sm" data-widget="collapse"
                                            data-toggle="tooltip" title="Collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-info btn-sm" data-widget="remove"
                                            data-toggle="tooltip" title="Remove">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                                <form>
                                    <textarea id="editor1" name="editor1" rows="10" cols="80">
                                            This is my textarea to be replaced with CKEditor.
                    </textarea>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
            </div>

            <!-- /.nav-tabs-custom -->
            <button class="btn btn-info" onclick = "getEdit()" >Edit</button>
            <button type="submit" class="btn btn-info">Submit</button>
            <button type="submit" class="btn btn-info">Public</button>
            <button type="submit" class="btn btn-info">Hide</button>
            <button type="submit" class="btn btn-info">Back</button>
        </div>


        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>

    $(document).ready(function () {
        getBasicInfo();
    });

                         
        function getBasicInfo() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("getDetailPost","Post")',
            dataType: "json",
            success: function (data) {
               $('#txtName').val(data.data[0].post_name);
            },
        });
        }

