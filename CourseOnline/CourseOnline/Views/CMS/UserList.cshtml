
@{
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
}
<div class="box">
    <div class="box-body">
        <div class="table-responsive">
            <table id="tb_user" class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
            <br />
        </div>

    </div>
</div>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
    $(document).ready(function() {
    $('#tb_user').DataTable({
        "ajax": {
        "url": '@Url.Action("GetAllUser", "User")',
        "type": "POST",
        "datatype": "json",
        },
        "columns": [
            { "data": "id","name" : "id", "orderable" : true},
            {"data" : "name","name" : "name", "orderable" : true},
            { "data": "email","name" : "email", "orderable": true },
             {
                "data": "id", "render": function(data) {
                    return "<a class='waves-effect waves-light btn-small blue darken-2 modal-trigger' data-target='edit_employee'  style='margin-left:5px' onclick=getEditIdEmp('" + data + "') ><i class='fa fa-fw fa-edit'></i>Sửa</a>";
                },
                "orderable": false,
                "searchable": false
                },
                {
                "data": "id", "render": function(data) {
                    return "<a class='waves-effect waves-light btn-small red modal-trigger' style='margin-left:5px' onclick=getDeleteIdEmp('" + data + "') ><i class='fa fa-trash'></i> Xóa</a>";
                },
                "orderable": false,
                "searchable": false
            }
            ],
        "paging": true,
        "pageLength": 2,
        "ordering": true,
        "serverSide": "true",
         "order": [[ 0, "asc" ]],
        "searching" : false
        });
    } );
    </script>
}


