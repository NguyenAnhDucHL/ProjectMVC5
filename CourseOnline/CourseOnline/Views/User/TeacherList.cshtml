@using PagedList.Mvc
@using CourseOnline.Models
@{
    ViewBag.Title = "Our Teacher";
    PagedList.IPagedList<TeacherModel> listTeachers = ViewBag.lstTeacher;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-4 mb-5">
                <h2 class="section-title-underline mb-5">
                    <span>Our Teachers</span>
                </h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in listTeachers)
            {
                <div class="col-lg-4 col-md-6 mb-5 mb-lg-5">
                    <div class="feature-1 border person text-center">
                        <img src="@item.user_image" alt="Image" class="img-fluid">
                        <div class="feature-1-content">
                            <h2>@item.user_fullname</h2>
                            <span class="position mb-3 d-block">@item.user_group</span>
                            <p>@item.user_description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="dlink">
            Page @(listTeachers.PageCount < listTeachers.PageNumber ? 0 : listTeachers.PageNumber)/@listTeachers.PageCount
            @Html.PagedListPager(listTeachers, page => Url.Action("listAllTeacher", new { page = page }))
        </div>
    </div>
</div>


