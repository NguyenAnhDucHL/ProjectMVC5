
@{
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    int countAdmin = ViewBag.countAdmin;
    int countTeacher = ViewBag.countTeacher;
    int countStudent = ViewBag.countStudent;
}
<section class="content-header">
    <h1>
        ChartJS
        <small>Preview sample</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Charts</a></li>
        <li class="active">ChartJS</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <i class="fa fa-bar-chart-o"></i>
                <h3 class="box-title">User Chart</h3>
            </div>
            <div class="box-body">
                <div id="user-chart" style="height: 300px;"></div>
            </div>
            <!-- /.box-body-->
        </div>
    </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script>
        window.onload = function () {
            var chart = new CanvasJS.Chart("user-chart", {
                theme: "light2",
                animationEnabled: true,
                title: {
                    text: "User Information"
                },
                data: [
                {
                    type: "column",
                    dataPoints: [
                         { y: @countAdmin, label: "Amdin" },
                         { y: @countTeacher, label: "Teacher" },
                         { y: @countStudent, label: "Student" },
                    ]
                }
                ]
            });
            chart.render();
        };
</script>
