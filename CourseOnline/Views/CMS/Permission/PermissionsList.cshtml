@{
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Permissions List
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Permissions List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="row">
                    <div class="col-sm-2">
                        <button id="btnAdd" type="submit" class="btn btn-block btn-primary" onclick='getAddPermission()'>Add New Permission</button>
                    </div>
                    <div class="col-sm-2">
                        <select id="sl_permissionStatus" class="form-control">
                            <option>All Status</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tb_permission" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="table-width5">ID</th>
                                <th class="table-width20">Permission</th>
                                <th class="table-width50">Link</th>
                                <th class="table-width5">Status</th>
                                <th class="table-width10">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@section scripts{
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        var dataTable;
    $(document).ready(function() {
       dataTable= $('#tb_permission').DataTable({
             "ajax": {
                "url": '@Url.Action("GetAllPermissions", "Permissions")',
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "permission_id", "name": "permission_id", "orderable": true },
                { "data": "permission_name", "name": "permission_name", "orderable": true },
                { "data": "permission_link", "name": "permission_link", "orderable": true },
                {
                    "data": "permission_status", "name": "permission_status", "orderable": true, "render": function (data) {
                        if (data == 1) return "active"
                        else return "Inactive"}
                },
                {
                    "data": "permission_id", "render": function (data) {
                            return "<button class='btn btn-block btn-primary' data-target='edit_employee'  style='margin-left:5px' onclick=getEditIdPermission('" + data + "') ><i class='fa fa-fw fa-edit'></i>Edit</button>" +
                                "<button class='btn btn-block btn-danger'  style='margin-left:5px' onclick=getDelIdPermission('" + data + "') ><i class='fa fa-trash'></i>Delete</button>";
                    },
                    "orderable": false,
                    "searchable": false
                },
            ],
        "paging": true,
        "pageLength": 5,
        "ordering": true,
        "serverSide": "true",
        "order": [[0, "asc"]],
        "searching": false
       });
        filterListener()
    });

          function filterListener() {
             $('#sl_permissionStatus').on('change', function (e) {
                var optionSelected = $("option:selected", this);
                 var valueSelected = this.value;
                 dataTable.ajax.url('@Url.Action("FilterByPermissionStatus","Permissions")' + '?type=' + valueSelected).load(function (response) { });
            });
        }
        function getEditIdPermission(id) {
            if (id != null) {
               window.location.href ='@Url.Action("PermissionsDetail", "Permissions")?id=' + id;
            }
        }
    function getAddPermission() {
               window.location.href ='@Url.Action("AddPermission", "Permissions")';
        }
        function getDelIdPermission(id) {
            if (id != null) {
                confirmAlert('Delete', 'Confirm Delete?', function submit() {
                    $.ajax({
                        url:'@Url.Action("deletePermission","Permissions")',
                        type: "POST",
                        data: { id: id },
                        datatype: "json",
                        success: (response) => {
                            if (response.success) {
                                dataTable.ajax.reload(); successAlert("Success", "Delete Success")
                            } else {
                                errorAlert("Fail", "Delete Error")
                            }
                        },
                        error: (response) => { errorAlert("Fail", "Network Error") }
                    });
                });
            }
    }

    </script>
}
