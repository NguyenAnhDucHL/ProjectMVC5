@using CourseOnline.Models;
@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    List<Subject> subjects = ViewBag.Subjects;
}

<section class="content-header">
    <h1>
        Courses List
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/course-list">Courses List</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="row">
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-block btn-primary" style="margin-top: 0px;" onclick='getAddCourse()'>Add new</button>
                    </div>
                    <div class="col-lg-2">
                        <select id="sl_subjectName" class="form-control">
                            <option value="187697411">All Subject</option>
                            @{
                                foreach (Subject s in subjects)
                                {
                                    <option value="@s.subject_id ">@s.subject_name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="box-body">
                    <table id="tb_course" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Course</th>
                                <th>Teacher</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        var dataTable;
        $(document).ready(function () {

            dataTable=$('#tb_course').DataTable({
            "ajax": {
                "url": '@Url.Action("GetAllCourse", "Course")',
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "course_id", "name": "course_id", "orderable": true },
                { "data": "course_name", "name": "course_name", "orderable": true },
                { "data": "user_fullname", "name": "user_fullname", "orderable": true },
                { "data": "course_start_date", "name": "course_start_date", "orderable": true },
                { "data": "course_end_date", "name": "course_end_date", "orderable": true },
                {
                    "data": "course_status", "name": "course_status", "orderable": true, "render": function (data) {
                        if (data == 1) return "Active"
                        else return "Inactive"}
                },
                {
                    "data": "course_id", "render": function (data) {
                        return "<button class='btn btn-block btn-primary' data-target='edit_employee'  style='margin-left:5px' onclick=getEditIdCourse('" + data + "') ><i class='fa fa-fw fa-edit'></i>Edit</button>" +
                               "<button class='btn btn-block btn-primary' data-target='edit_employee'  style='margin-left:5px' onclick=getCourseWork('" + data + "') ><i class='fa fa-fw fa-edit'></i>Coursework</button>" +
                               "<button class='btn btn-block btn-primary' data-target='edit_employee'  style='margin-left:5px' onclick=getGrade('" + data + "') ><i class='fa fa-fw fa-edit'></i>Grades</button>";

                    },
                    "orderable": false,
                    "searchable": false
                },
            ],
        "paging": true,
        "pageLength": 5,
        "ordering": true,
        "serverSide": "true",
        "order": [[0, "asc"]],
        "searching": false
        });
        filterListener();
    });

        function filterListener() {
             $('#sl_subjectName').on('change', function (e) {
                 var optionSelected = $("option:selected", this);
                 var valueSelected = this.value;
                 dataTable.ajax.url('@Url.Action("FilterBySubjectName","Course")' + '?type=' + valueSelected).load(function (response) { });
            });
        }
        function getAddCourse() {
            window.location.href = '@Url.Action("AddCourse","Course")';
        }
         //bat su kien edit
        function getEditIdCourse(id) {
            if (id != null) {
               window.location.href ='@Url.Action("CourseEdit", "Course")?id=' + id;
            }
        }
        //bat su kien coursework
        function getCourseWork(id) {
            if (id != null) {
               window.location.href ='@Url.Action("CourseWorkList", "Course")?id=' + id;
            }
        }
        //bat su kien grade
        function getGrade(id) {
            if (id != null) {
               window.location.href ='@Url.Action("GetGrade", "Course")?id=' + id;
            }
        }
    </script>
}
