@using CourseOnline.Models;
@{
    ViewBag.Title = "AddTest";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    List<Exam> listExam = ViewBag.listExam;
}
<section class="content-header">
    <h1>
        Create Test
    </h1>
    <ol class="breadcrumb">
        <li><a href='@Url.Action("Index","Home")'><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index","Test")'>Test Lists</a></li>
        <li class="active">Test Detail</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="nav-tabs-custom">
                    <div class="form-group" style="width:30%;">
                        <label>Exam</label>
                        <select id="sl_exam" class="form-control">
                            @{
                                foreach (Exam e in listExam)
                                {
                                    <option value="@e.exam_id">@e.exam_name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group" style="width:30%;">
                        <label>Name</label>
                        <input id="inp_testName" type="text" class="form-control" />
                    </div>
                </div>
            </div>
            <button type="submit" onclick="submitTest()" class="btn btn-info edit-field">Submit</button>
            <button type="submit" onclick="goBack()" class="btn btn-info">Back</button>
        </div>
    </div>
</section>

@section scripts{
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script>
    function submitTest() {

        var test = {
            examName: $("#sl_exam").val(),
            testName: $("#inp_testName").val()
            };

            var postJson = JSON.stringify(test);
            
            $.ajax({
                url: '@Url.Action("SubmitTest","Test")',
                type: "POST",
                data: { postJson : postJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("submit thanh cong");
                    } else {
                        alert("submit that bai");
                    }
                },
                error: (response) => { alert("co van de ve mang") }
            });
        };
    function goBack() {
        window.location.href = '@Url.Action("Index", "Test")';
    }

</script>
}

