@using CourseOnline.Models;
@{
    ViewBag.Title = "Post Detail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    List<Setting> listSetting = ViewBag.Setting;
    List<Setting> listSettingCategory = ViewBag.SettingCategory;
}

<section class="content-header">
    <h1>
        Post Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="dashboard.html"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index", "Post")'>Post Lists</a></li>
        <li class="active">Post Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">

        <div class="col-lg-12">
            <div class="nav-tabs-custom ">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#overview" data-toggle="tab">Overview</a></li>
                    <li><a href="#content" data-toggle="tab">Content</a></li>

                    <!-- /.tab-content -->
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="overview">
                        <div class="form-group">
                            <label>Post name</label>
                            <input type="text" class="form-control edit-field" id="inp_name">
                        </div>
                        <div class="form-group">
                            <label>Short description</label>
                            <textarea class="form-control edit-field" id="inp_shortDes" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3 ">
                                    <label for="thumbnail">Thumbnail</label>
                                    <input class="custom-input" type="file" id="thumbnail">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Type</label>
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3">
                                    <select id="sl_postType" class="form-control edit-field">
                                        @{
                                            foreach (Setting setting in listSetting)
                                            {
                                                <option value="@setting.setting_name">@setting.setting_name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <div class="row">
                                <div class="col col-lg-3 col-md-3 col-sm-3">
                                    <select id="sl_PostCategory" class="form-control edit-field">
                                        @{
                                            foreach (Setting setting in listSettingCategory)
                                            {
                                                <option value="@setting.setting_name">@setting.setting_name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="content">
                        <div class="box box-info">
                            <div class="box-header">
                                <h3 class="box-title">
                                    CK Editor
                                    <small>Advanced and full of features</small>
                                </h3>
                                <!-- tools box -->
                                <div class="pull-right box-tools">
                                    <button type="button" class="btn btn-info btn-sm" data-widget="collapse"
                                            data-toggle="tooltip" title="Collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-info btn-sm" data-widget="remove"
                                            data-toggle="tooltip" title="Remove">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">
                                <form>
                                    <textarea id="editor1" name="editor1" rows="10" cols="80" placeholder="This is my textarea"></textarea>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
            </div>

            <!-- /.nav-tabs-custom -->
            <button type="submit" onclick="draftPost()" class="btn btn-info edit-field">Draft</button>
            <button type="submit" onclick="submitPost()" class="btn btn-info edit-field">Submit</button>
            <button type="submit" onclick="publishPost()" class="btn btn-info edit-field">Publish</button>
            <button type="submit" onclick="hidePost()" class="btn btn-info edit-field">Hide</button>
            <button type="submit" class="btn btn-info" onclick="getBackPostList()">Back</button>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/ggfbhz52km8705qzardmaj5wi5nimvcagr9owfw523rin98f/tinymce/5/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    <script>

