
@{
    ViewBag.Title = "LessonDetail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    int subject_id = ViewBag.SubjectId;
}

<section class="content-header">
    <h1>
        Domain Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index","Subject")'>Subjects List</a></li>
        <li><a href='@Url.Action("BackDomainList","Domain")/@ViewBag.SubjectId'>Subject Editting</a></li>
        <li class="active">Domain Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" id="inp_name">
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select id="sl_domainStatus" class="form-control">
                                    <option>Active</option>
                                    <option>Inactive</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="4" id="inp_description"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-3">

                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger" onclick="SubmitAddDomain()">Submit</button>
                    <button type="submit" class="btn btn-danger" onclick='getBackDomainList()'>Back</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>

        function SubmitAddDomain() {
            var domain = {
                subjectId: @subject_id,
                domainName: $("#inp_name").val(),
                domainDes: $("#inp_description").val(),
                domainStatus: $("#sl_domainStatus").val(),
            };

            var postJson = JSON.stringify(domain);

            $.ajax({
                url: '@Url.Action("SubmitAddDomain","Domain")',
                type: "POST",
                data: { postJson : postJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("submit thanh cong");
                        turnOnEditMode();
                    } else {
                        alert("submit that bai");
                    }
                },
                error: (response) => { alert("co van de ve mang") }
            });
        };

        // bat su kien back
    function getBackDomainList() {
               window.location.href ='@Url.Action("BackDomainList", "Domain")/@ViewBag.SubjectId';
        }
    </script>
}
