
@using CourseOnline.Models;
@{
    ViewBag.Title = "LessonDetail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    List<Setting> listLessonType = ViewBag.LessonType;
    int subject_id = ViewBag.SubjectId;
}

<section class="content-header">
    <h1>
        Lesson Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index","Subject")'>Subjects List</a></li>
        <li><a href='@Url.Action("BackSubjectLessonList","SubjectLesson")/@ViewBag.SubjectId'>Subject Lesson</a></li>
        <li class="active">Lesson Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" id="inp_name">
                            </div>
                            <div class="form-group">
                                <label>Type</label>
                                <select id="sl_lessonType" class="form-control">
                                    @{
                                        foreach (Setting setting in listLessonType)
                                        {
                                            <option value="@setting.setting_name">@setting.setting_name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Status</label>
                                <select id="sl_lessonStatus" class="form-control">
                                    <option>Active</option>
                                    <option>Inactive</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Order</label>
                                <input type="text" class="form-control" id="inp_order">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Video link</label>
                        <input type="text" class="form-control" placeholder="Youtube link" id="inp_link">
                    </div>
                    <div class="form-group">
                        <label>HTML Content</label>
                        <textarea class="form-control" rows="10" id="inp_content"></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger" onclick="SubmitAddLesson()">Submit</button>
                    <button type="submit" class="btn btn-danger" onclick='getBackSubjectLessonList()'>Back</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>

    function SubmitAddLesson() {
            tinyMCE.triggerSave();
            var lesson = {
                subjectId: @subject_id,
                lessonName: $("#inp_name").val(),
                lessonType: $("#sl_lessonType").val(),
                lessonStatus: $("#sl_lessonStatus").val(),
                lessonOrder: $("#inp_order").val(),
                lessonLink: $("#inp_link").val(),
                lessonContent: $("#inp_content").val(),
            };

            var postJson = JSON.stringify(lesson);

            $.ajax({
                url: '@Url.Action("SubmitAddLesson","SubjectLesson")',
                type: "POST",
                data: { postJson : postJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("submit thanh cong");
                        turnOnEditMode();
                    } else {
                        alert("submit that bai");
                    }
                },
                error: (response) => { alert("co van de ve mang") }
            });
        };

    // bat su kien back
    function getBackSubjectLessonList() {
               window.location.href ='@Url.Action("BackSubjectLessonList", "SubjectLesson")/@ViewBag.SubjectId';
        }

    </script>
}
