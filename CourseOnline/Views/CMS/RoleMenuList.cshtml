
@{
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
}
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        Role Menus
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Role Menu</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tb_menu_role" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="table-width5">ID</th>
                                <th class="table-width80">Menu</th>
                                <th class="table-width5">Role 1</th>
                                <th class="table-width5">Role 2</th>
                                <th class="table-width5">Role 3</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
    $(document).ready(function() {
        $('#tb_menu_role').DataTable({
             "ajax": {
                "url": '@Url.Action("GetAllRoleMenu", "RoleMenu")',
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "role_menu_id", "name": "role_menu_id", "orderable": true },
                { "data": "menu_name", "name": "menu_name", "orderable": true },
                { "data": "role_menu_id", "render": function (data) {
                        if (data) {
                            return "<input type='checkbox' >";
                        }
                    },
                    "orderable": false,
                    "searchable": false },
                { "data": "role_menu_id", "render": function (data) {
                        if (data) {
                            return "<input type='checkbox' >";
                        }
                    },
                    "orderable": false,
                    "searchable": false },
                { "data": "role_menu_id", "render": function (data) {
                        if (data) {
                            return "<input type='checkbox' >";
                        }
                    },
                    "orderable": false,
                    "searchable": false },
            ],
        "paging": true,
        "pageLength": 5,
        "ordering": true,
        "serverSide": "true",
        "order": [[0, "asc"]],
        "searching": false
        });
    });
    </script>
}