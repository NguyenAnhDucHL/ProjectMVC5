@using CourseOnline.Models;
@{
    ViewBag.Title = "Setting Detail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    Slider sl = ViewBag.Slider;
    int id = ViewBag.id;
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Slider Details
    </h1>
    <ol class="breadcrumb">
        <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index","Slider")'>Sliders List</a></li>
        <li class="active">Slider Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="tab-image">
                        <img class="img-responsive pad" src="../static/customimg/ronaldo.jpg/" alt="Photo">
                        <div class="row tab-button">
                            <div class="form-group col-sm-5 col-sm-push-7">
                            </div>
                            <div class="tab-pane tab-image" id="photo">
                                <img id="image_post" class="img-responsive pad" src="" alt="Photo">
                                <div class="row tab-button">
                                    <div class="form-group col-sm-5 col-sm-push-7">
                                        <label for="exampleChange">Add/Change image</label>
                                        <input onchange="readURL(this);" class="custom-input" type="file" id="exampleChange">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input id="inp_title" disabled type="text" class="form-control edit-field" value="@sl.slider_title">
                    </div>
                    <div class="form-group">
                        <label>Caption</label>
                        <input id="inp_caption" disabled type="text" class="form-control edit-field" value="@sl.slider_caption">
                    </div>
                    <div class="form-group">
                        <label>Link</label>
                        <input id="inp_link" disabled type="text" class="form-control edit-field" value="@sl.slider_back_link">
                    </div>
                    <button type="submit" class="btn btn-info" onclick="turnOnEditMode()">Edit</button>
                    <button type="submit" class="btn btn-info" onclick="draftSlider()">Save draft</button>
                    <button type="submit" class="btn btn-info" onclick="submitSlider()">Submit</button>
                    <button type="submit" class="btn btn-info" onclick="publicSlider()">Publish</button>
                    <button type="submit" class="btn btn-info" onclick="hideSlider()">Hide</button>
                    <button type="submit" class="btn btn-info" onclick="goBack()">Back</button>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
</section>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
            var isEnableEditingMode = false;

            $(document).ready(function () {
                setValueForComboBox();

            });
            function turnOnEditMode() {
                if (!isEnableEditingMode) {
                    // bat trang thai edit
                    $(".edit-field").each(
                        function () { $(this).prop('disabled', false); isEnableEditingMode = true; }
                    )
                } else {
                    // tat trang thai edit
                    $(".edit-field").each(
                        function () { $(this).prop('disabled', true); isEnableEditingMode = false; }
                    )
                }
            };

            //draft slider
        function draftSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderStatus : "Draft"
            };
            var postJson = JSON.stringify(slider);
            $.ajax({
                url: '@Url.Action("SubmitEditSlider","Slider")',
                type: "POST",
                data: { postJson : postJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("Submit successful");
                    } else {
                        alert("Submit fail");
                    }
                },
                error: (response) => { alert("NetWork problem!") }
            });
        };

        //submit slider
        function submitSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderStatus: "Submitted"
            };
            var sliderJson = JSON.stringify(slider);
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("Submit successful");
                    } else {
                        alert("Submit fail");
                    }
                },
                error: (response) => { alert("NetWork problem!") }
            });
        };

        //publish slider
        function publicSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderStatus: "Published"
            };
            var sliderJson = JSON.stringify(slider);
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("Submit successful");
                    } else {
                        alert("Submit fail");
                    }
                },
                error: (response) => { alert("NetWork problem!") }
            });
        };

        //hide slider
        function hideSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderStatus: "Hiden"
            };
            var sliderJson = JSON.stringify(slider);
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        alert("Submit successful");
                    } else {
                        alert("Submit fail");
                    }
                },
                error: (response) => { alert("NetWork problem!") }
            });
        };


            function goBack() {
            window.location.href ='@Url.Action("Index", "Slider")';
        }
    </script>


}

