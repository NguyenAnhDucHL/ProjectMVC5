@using CourseOnline.Models;
@{
    ViewBag.Title = "Setting Detail";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    Slider sl = ViewBag.Slider;
    int id = ViewBag.id;
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Slider Details
    </h1>
    <ol class="breadcrumb">
        <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href='@Url.Action("Index","Slider")'>Sliders List</a></li>
        <li class="active">Slider Details</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Title</label>
                            <input id="inp_title" disabled type="text" class="form-control edit-field" value="@sl.slider_title">
                        </div>
                        <div class="form-group">
                            <label>Caption</label>
                            <input id="inp_caption" disabled type="text" class="form-control edit-field" value="@sl.slider_caption">
                        </div>
                        <div class="form-group">
                            <label>Link</label>
                            <input id="inp_link" disabled type="text" class="form-control edit-field" value="@sl.slider_back_link">
                        </div>
                        <button type="submit" class="btn btn-info" onclick="turnOnEditMode()">Edit</button>
                        <button type="submit" disabled class="btn btn-info edit-field" onclick="draftSlider()">Save draft</button>
                        <button type="submit" disabled class="btn btn-info edit-field" onclick="submitSlider()">Submit</button>
                        <button type="submit" disabled class="btn btn-info edit-field" onclick="publicSlider()">Publish</button>
                        <button type="submit" disabled class="btn btn-info edit-field" onclick="hideSlider()">Hide</button>
                        <button type="submit" disabled class="btn btn-info edit-field" onclick="goBack()">Back</button>
                    </div>
                    <div class="col-sm-2" style="margin-right:30px;">
                        <div class="tab-image">
                            <div dis disabled class="form-group">
                                <div class="tab-pane tab-image" id="photo">
                                    <img id="image_slider" class="img-responsive pad" src="@(sl.slider_picture_url == null ? "" : Url.Content(sl.slider_picture_url))" alt="Photo">
                                    <div class="row tab-button edit-field">
                                        <div class="form-group col-sm-5 col-sm-push-7">
                                            <label for="exampleChange">Add/Change image</label>
                                            <input disabled onchange="readURL(this);" class="custom-input edit-field" type="file" id="exampleChange">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
</section>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
            var isEnableEditingMode = false;

            $(document).ready(function () {
                setValueForComboBox();

            });
        //su kien load anh
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image_slider')
                        .attr('src', e.target.result)
                        .width(200)
                        .height(300);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
            function turnOnEditMode() {
                if (!isEnableEditingMode) {
                    // bat trang thai edit
                    $(".edit-field").each(
                        function () { $(this).prop('disabled', false); isEnableEditingMode = true; }
                    )
                } else {
                    // tat trang thai edit
                    $(".edit-field").each(
                        function () { $(this).prop('disabled', true); isEnableEditingMode = false; }
                    )
                }
        };
        //turn off edit
        function turnOffEditMode() {
                $(".edit-field").each(
                    function () {
                        $(this).prop('disabled', true); isEnableEditingMode = true;
                    }
                )
        };

            //draft slider
        function draftSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderImage: $('#image_slider').attr('src'),
                sliderStatus : "Draft"
            };
            var postJson = JSON.stringify(slider);
            if ($("#inp_title").val() == "") {
                errorAlert("Title not empty!");
                return;
            } else if ($("#inp_caption").val() == "") {
                errorAlert("Caption not empty!");
                return;
            } else if ($("#inp_link").val() == "") {
                errorAlert("Link is not empty!");
                return;
            }
            $.ajax({
                url: '@Url.Action("SubmitEditSlider","Slider")',
                type: "POST",
                data: { postJson : postJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        successAlert("Submit successful");
                        turnOffEditMode();
                    } else {
                        errorAlert("Submit fail");
                    }
                },
                error: (response) => { errorAlert("NetWork problem!") }
            });
        };

        //submit slider
        function submitSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderImage: $('#image_slider').attr('src'),
                sliderStatus: "Submitted"
            };
            var sliderJson = JSON.stringify(slider);
            if ($("#inp_title").val() == "") {
                errorAlert("Title not empty!");
                return;
            } else if ($("#inp_caption").val() == "") {
                errorAlert("Caption not empty!");
                return;
            } else if ($("#inp_link").val() == "") {
                errorAlert("Link is not empty!");
                return;
            }
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        successAlert("Submit successful");
                        turnOffEditMode();
                    } else {
                        errorAlert("Submit fail");
                    }
                },
                error: (response) => { errorAlert("NetWork problem!") }
            });
        };

        //publish slider
        function publicSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderImage: $('#image_slider').attr('src'),
                sliderStatus: "Published"
            };
            var sliderJson = JSON.stringify(slider);
            if ($("#inp_title").val() == "") {
                errorAlert("Title not empty!");
                return;
            } else if ($("#inp_caption").val() == "") {
                errorAlert("Caption not empty!");
                return;
            } else if ($("#inp_link").val() == "") {
                errorAlert("Link is not empty!");
                return;
            }
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        successAlert("Submit successful");
                        turnOffEditMode();
                    } else {
                        errorAlert("Submit fail");
                    }
                },
                error: (response) => { errorAlert("NetWork problem!") }
            });
        };

        //hide slider
        function hideSlider() {
            var slider = {
                id : @id,
                sliderTitle: $("#inp_title").val(),
                sliderCaption: $("#inp_caption").val(),
                sliderLink: $("#inp_link").val(),
                sliderImage: $('#image_slider').attr('src'),
                sliderStatus: "Hiden"
            };
            var sliderJson = JSON.stringify(slider);
            if ($("#inp_title").val() == "") {
                errorAlert("Title not empty!");
                return;
            } else if ($("#inp_caption").val() == "") {
                errorAlert("Caption not empty!");
                return;
            } else if ($("#inp_link").val() == "") {
                errorAlert("Link is not empty!");
                return;
            }
            $.ajax({
                url: '@Url.Action("SubmitEditSlider", "Slider")',
                type: "POST",
                data: { postJson: sliderJson },
                dataType: "json",
                success: (response) => {
                    if (response.success) {
                        successAlert("Submit successful");
                        turnOffEditMode();
                    } else {
                        errorAlert("Submit fail");
                    }
                },
                error: (response) => { errorAlert("NetWork problem!") }
            });
        };


            function goBack() {
            window.location.href ='@Url.Action("Index", "Slider")';
        }
    </script>


}

