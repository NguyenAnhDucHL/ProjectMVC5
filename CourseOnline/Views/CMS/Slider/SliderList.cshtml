@using CourseOnline.Models;
@{
    ViewBag.Title = "Slider List";
    Layout = "~/Views/Shared/_CMS_Layout.cshtml";
    var listSlider = ViewBag.sliderStatus;
}


<section class="content-header">
    <h1>
        Sliders List
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Sliders List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="row">
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-block btn-primary" style="margin-top: 0px;" onclick='getAddSlider()'>Add new</button>
                    </div>
                    <div class="col-lg-2">
                        <select id="sl_sliderStatus" class="form-control">
                            <option>All Status</option>
                            @{
                                foreach (string slider in listSlider)
                                {
                                    <option value="@slider">@slider</option>
                                }
                            }
                        </select>
                    </div>
                    </div>
                    <div class="box-body">
                        <div class="box">
                            <!-- /.box-header -->
                            <table id="tb_slider" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Picture</th>
                                        <th>Slider Title</th>
                                        <th>Link Slider</th>
                                        <th>Caption</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        var dataTable;
        $(document).ready(function () {
            dataTable =  $('#tb_slider').DataTable({
            "ajax": {
                "url": '@Url.Action("GetAllSlider", "Slider")',
                "type": "POST",
                "datatype": "json",
            },
            "columns": [
                { "data": "slider_id", "name": "slider_id", "orderable": true },
                {
                    "data": "slider_picture_url", "render": function (data) {
                        if (data) {
                            return "<img src='/Assets/customimg/ronaldo.jpg' style='height: 50%;'>";
                        }
                    },
                    "orderable": false,
                    "searchable": false
                },
                { "data": "slider_title", "name": "slider_title", "orderable": true },
                {
                    "data": "slider_back_link", "render": function (data) {
                        if (data) {
                            return "<a href='#' onclick=getImage('" + data + "') >(" + data +")</a>";
                        }
                    },
                    "orderable": false,
                    "searchable": false
                },
                { "data": "slider_caption", "name": "slider_caption", "orderable": true },
                { "data": "slider_status", "name": "slider_status", "orderable": true },
                {
                    "data": "slider_id", "render": function (data) {
                        if (data) {
                            return "<a class='btn btn-block btn-primary' data-target='edit_employee'  style='margin-left:5px' onclick=getEditSlider('" + data + "') ><i class='fa fa-fw fa-edit'></i> Edit</a>" +
                                "<a class='btn btn-block btn-danger' style='margin-left:5px' onclick=getDeleteIdSlider('" + data + "') ><i class='link-space-left-20 fa fa-trash'></i> Delete</a>";
                        }
                    },
                    "orderable": false,
                    "searchable": false
                },
            ],
        "paging": true,
        "pageLength": 5,
        "ordering": true,
        "serverSide": "true",
        "order": [[0, "asc"]],
        "searching": false
            });
            filterListener();
    });
        //bat su kien add
        function getAddSlider() {
            window.location.href = '@Url.Action("AddSlider","Slider")';
        }

        //filer status
        function filterListener() {
            $('#sl_sliderStatus').on('change', function (e) {
                var optionSelected = $("option:selected", this);
                 var valueSelected = this.value;
                 dataTable.ajax.url('@Url.Action("FilterBySliderStatus","Slider")' + '?type=' + valueSelected).load(function (response) { });
            });
        }

        //bat su kien edit
        function getEditSlider(id) {
            if (id != null) {
                window.location.href = '@Url.Action("EditSlider","Slider")?id=' + id;
            }
        }

        //delete slider theo id
        function getDeleteIdSlider(id) {
            if (id != null) {
                confirmAlert('Xóa', 'Xác nhận xóa', function submit() {
                    $.ajax({
                        url:'@Url.Action("delSlider","Slider")',
                        type: "POST",
                        data: { id: id },
                        datatype: "json",
                        success: (response) => {
                            if (response.success) {
                                dataTable.ajax.reload(); successAlert("Thành công", "Xóa thành công")
                            } else {
                                errorAlert("Thất bại", "Xóa thất bại")
                            }
                        },
                        error: (response) => { errorAlert("Thất bại", "Xóa thất bại") }
                    });
                });
            }
        }

    </script>
}

