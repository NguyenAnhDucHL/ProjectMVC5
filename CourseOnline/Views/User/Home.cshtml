@using CourseOnline.Models;

@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Subject> listSubjects = ViewBag.lstSubject;
    List<Post> listPost = ViewBag.lstPost;
    List<TeacherModel> listTeacher = ViewBag.lstTeacher;
}
<div class="hero-slide owl-carousel site-blocks-cover">
    <div class="intro-section" style="background-image: url('../../Assets/IMGUSER/fpt_logo.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>FPT University</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="intro-section" style="background-image: url('../../Assets/IMGUSER/fpt_logo_2.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>You Can Learn Anything</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="intro-section" style="background-image: url('../../Assets/IMGUSER/fpt_logo_3.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>Go Global</h1>
                </div>
            </div>
        </div>
    </div>

</div>


<div></div>

<div class="site-section">
    <div class="container">


        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Popular Subjects</span>
                </h2>
                <a href="@Url.Action("ListSubjects","Subject")">Read All Subjects</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="owl-slide-3 owl-carousel">

                    @foreach (var item in listSubjects)
                    {
                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="@Url.Action("SubjectDetail","Subject", new { @id = item.subject_id})"><img src="@item.picture" alt="Image" class="img-fluid" style="height:150px; width:500px; overflow:hidden"></a>
                                <div class="category"><h3>@item.subject_category</h3></div>
                            </figure>
                            <div class="course-1-content pb-4">
                                <h2>@item.subject_name</h2>
                                <div class="rating text-center mb-3">
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                    <span class="icon-star2 text-warning"></span>
                                </div>
                                <div class="desc mb-4" style="height:100px; overflow:hidden">@item.subject_brief_info</div>
                                <p><a href="@Url.Action("SubjectDetail","Subject", new { @id = item.subject_id})" class="btn btn-primary rounded-0 px-4">Enroll In This Course</a></p>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>



    </div>
</div>

<div class="news-updates">
    <div class="container">

        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>News &amp; Events</span>
                </h2>
                <a href="@Url.Action("PostList","News")">Read All News</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="post-entry-big">
                    <a href="#" class="img-link"><img src="@listPost[0].post_thumbnail" alt="Image" class="img-fluid"></a>
                    <div class="post-content">
                        <div class="post-meta">
                            <a href="#">@listPost[0].post_date</a>
                            <span class="mx-1">/@listPost[0].post_category</span>
                        </div>
                        <h3 class="post-heading"><a href="#">@listPost[0].post_name</a></h3>
                        <span>@listPost[0].post_brief_info</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                @{ listPost.RemoveAt(0);
                    foreach (var item in listPost)
                    {
                        <div class="post-entry-big horizontal d-flex mb-4">
                            <a href="#" class="img-link mr-4"><img src="@item.post_thumbnail" alt="Image" class="img-fluid"></a>
                            <div class="post-content">
                                <div class="post-meta">
                                    <a href="#">@item.post_date</a>
                                    <span class="mx-1">/@item.post_category</span>
                                </div>
                                <h3 class="post-heading"><a href="#">@item.post_name</a></h3>
                                <span>@item.post_brief_info</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Teachers and Mentors</span>
                </h2>
                <a href="@Url.Action("listAllTeacher","Teacher")">See more teachers</a>
            </div>
        </div>
        <div class="owl-slide owl-carousel">
            @foreach (var item in listTeacher)
            {
                <div class="ftco-testimonial-1">
                    <div class="ftco-testimonial-vcard d-flex align-items-center mb-4">
                        <img src="@item.user_image" alt="Image" class="img-fluid mr-3" style="height:100px; width:100px; overflow:hidden">
                        <div>
                            <h3>@item.user_fullname</h3>
                            <span>@item.user_role</span>
                        </div>
                    </div>
                    <div>
                        <p style="height:100px; width:500px; overflow:hidden">@item.user_description</p>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


